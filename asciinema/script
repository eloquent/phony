vi example.php:
    <?php

    use function Eloquent\Phony\spy;

    require 'vendor/autoload.php';

    function callIt($callback)
    {
        $callback('Phony is awful!');
    }

    $spy = spy();
    callIt($spy);

    try {
        $spy->calledWith('Phony is awesome!');
        echo "Success.\n";
    } catch (Exception $e) {
        echo $e->getMessage() . "\n";
    }
:wq
