<phpunit
    bootstrap="test/bootstrap.php"
    convertErrorsToExceptions="true"
    convertNoticesToExceptions="true"
    convertWarningsToExceptions="true"
    mapTestClassNameToCoveredClassName="true"
    verbose="true"
    colors="true"
    timeoutForSmallTests="60"
    timeoutForMediumTests="120"
    timeoutForLargeTests="300"
    beStrictAboutTestsThatDoNotTestAnything="true"
    checkForUnintentionallyCoveredCode="false"
    beStrictAboutOutputDuringTests="true"
>
    <testsuites>
        <testsuite>
            <directory>test/suite</directory>
        </testsuite>
    </testsuites>

    <logging>
        <log
            type="tap"
            target="artifacts/tests/report.tap"
        />
        <log
            type="junit"
            target="artifacts/tests/report.junit.xml"
        />
        <log
            type="coverage-html"
            target="artifacts/tests/coverage"
            charset="UTF-8"
            yui="true"
            highlight="true"
        />
        <log
            type="coverage-clover"
            target="artifacts/tests/coverage/coverage.xml"
        />
        <log
            type="coverage-text"
            target="artifacts/tests/coverage/coverage.txt"
        />
    </logging>

    <filter>
        <whitelist>
            <directory>src</directory>
        </whitelist>
    </filter>

    <groups>
        <exclude>
            <group>exclude-by-default</group>
            <group>exclude-from-coverage</group>
        </exclude>
    </groups>
</phpunit>
